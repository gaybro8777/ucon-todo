{
  "name": "ucon-todo",
  "private": true,
  "version": "1.0.0",
  "description": "Sample code for ucon web application framework",
  "main": "index.js",
  "scripts": {
    "postinstall": "dtsm install",
    "copy:swagger-ui": "cp -r node_modules/swagger-ui/dist/ ./public/swagger-ui/ && cp ./swagger-ui-index.html ./public/swagger-ui/index.html",
    "clean": "rm -rf ./public/swagger-ui ./public/scripts/ ./public/styles/",
    "build:ts": "tsconfig -u && tsfmt -r && tsc -p ./",
    "build:css": "mkdir -p public/styles && postcss -u autoprefixer -u postcss-import -c options.json -o public/styles/main.css styles/*.css",
    "build:bundle": "webpack src/index.js public/scripts/bundle.js",
    "tslint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "build:base": "npm run clean && npm run build:ts && npm run build:css && npm run build:bundle && npm run tslint && npm run copy:swagger-ui",
    "build": "cp src/environment.dev.ts src/environment.ts && npm run build:base",
    "build:prod": "cp src/environment.prod.ts src/environment.ts && npm run build:base",
    "test:bundle": "webpack test/index.spec.js test/bundle.spec.js",
    "pretest": "npm run build && npm run test:bundle",
    "test": "karma start karma.conf.js",
    "start": "live-server public"
  },
  "author": "vvakame",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vvakame/ucon-todo.git"
  },
  "bugs": {
    "url": "https://github.com/vvakame/ucon-todo/issues"
  },
  "homepage": "https://github.com/vvakame/ucon-todo#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "dtsgenerator": "^0.6.1",
    "dtsm": "^1.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "live-server": "^1.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "tsconfig-cli": "^2.0.0",
    "tslint": "^3.7.4",
    "typescript": "^1.8.10",
    "typescript-formatter": "^2.1.0",
    "webpack": "^1.13.0"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.1",
    "@angular/compiler": "^2.0.0-rc.1",
    "@angular/core": "^2.0.0-rc.1",
    "@angular/http": "^2.0.0-rc.1",
    "@angular/platform-browser": "^2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.1",
    "@angular/router-deprecated": "^2.0.0-rc.1",
    "bootstrap": "^4.0.0-alpha.2",
    "es6-shim": "0.35.0",
    "reflect-metadata": "0.1.3",
    "rxjs": "^5.0.0-beta.6",
    "swagger-ui": "^2.1.4",
    "zone.js": "0.6.12"
  }
}
