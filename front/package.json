{
  "name": "ucon-todo",
  "private": true,
  "version": "1.0.0",
  "description": "Sample code for ucon web application framework",
  "main": "index.js",
  "scripts": {
    "postinstall": "dtsm install",
    "clean": "rm -rf ./dist/",
    "copy:swagger-ui": "cp -r node_modules/swagger-ui/dist/ ./dist/swagger-ui/ && cp ./swagger-ui-index.html ./dist/swagger-ui/index.html",
    "copy:resource": "cp -r ./public/index.html ./dist",
    "gen:model": "curl http://localhost:8080/api/swagger.json | sw2dts --stdin -o src/model-generated.d.ts",
    "build:ts": "tsconfig -u && tsfmt -r && tsc -p ./",
    "build:css": "mkdir -p dist/styles && postcss -u autoprefixer -u postcss-import -c options.json -o dist/styles/main.css styles/*.css",
    "build:bundle": "webpack src/index.js dist/scripts/bundle.js",
    "build:sw": "webpack serviceworker/index.js dist/sw.js && echo 'self.registration.unregister();' > dist/sw-precache.js",
    "tslint": "tslint ./src/**/*.ts ./serviceworker/*.ts ./test/**/*.ts",
    "build:base": "npm run clean && npm run build:ts && npm run build:css && npm run build:bundle && npm run build:sw && npm run tslint && npm run copy:resource && npm run copy:swagger-ui",
    "build": "cp src/environment.dev.ts src/environment.ts && npm run build:base",
    "postbuild": "rm -rf ../api/src/public && mkdir -p ../api/src/public/ && cp -r ./dist ../api/src/public",
    "build:prod": "cp src/environment.prod.ts src/environment.ts && npm run build:base",
    "test:bundle": "webpack test/index.spec.js test/bundle.spec.js",
    "pretest": "npm run build && npm run test:bundle",
    "test": "karma start karma.conf.js",
    "start": "live-server dist/",
    "ngssr": "ngssr --templateFile ./public/index.html --componentFile ./src/app.component"
  },
  "author": "vvakame",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vvakame/ucon-todo.git"
  },
  "bugs": {
    "url": "https://github.com/vvakame/ucon-todo/issues"
  },
  "homepage": "https://github.com/vvakame/ucon-todo#readme",
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.2",
    "@angular2-material/button": "2.0.0-alpha.6-2",
    "@angular2-material/card": "2.0.0-alpha.6-2",
    "@angular2-material/core": "2.0.0-alpha.6-2",
    "@angular2-material/icon": "2.0.0-alpha.6-2",
    "@angular2-material/input": "2.0.0-alpha.6-2",
    "@angular2-material/list": "2.0.0-alpha.6-2",
    "@angular2-material/sidenav": "2.0.0-alpha.6-2",
    "@angular2-material/toolbar": "2.0.0-alpha.6-2",
    "es6-shim": "0.35.1",
    "reflect-metadata": "0.1.3",
    "rxjs": "^5.0.0-beta.9",
    "sw-toolbox": "^3.2.1",
    "swagger-ui": "^2.1.4",
    "zone.js": "0.6.12"
  },
  "devDependencies": {
    "@angular/platform-server": "2.0.0-rc.4",
    "angular2-universal": "^0.104.5",
    "autoprefixer": "^6.3.6",
    "dtsgenerator": "^0.6.1",
    "dtsm": "^1.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "live-server": "^1.0.0",
    "ng-ssr-cli": "^1.0.2",
    "parse5": "^1.5.0",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "preboot": "^2.1.2",
    "sw2dts": "^1.0.5",
    "tsconfig-cli": "^2.0.0",
    "tslint": "^3.11.0",
    "typescript": "^1.8.10",
    "typescript-formatter": "^2.2.0",
    "webpack": "^1.13.1"
  }
}
